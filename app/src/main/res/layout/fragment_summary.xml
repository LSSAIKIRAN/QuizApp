<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.SummaryFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/_20mdp"
       android:layout_marginBottom="@dimen/_100mdp"
       android:padding="@dimen/_20mdp"
       android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">
         <ImageView
             android:layout_width="@dimen/_20mdp"
             android:layout_height="@dimen/_20mdp"
             android:src="@drawable/greencircle"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Answered"
             android:layout_marginStart="@dimen/_10mdp"
             android:textSize="@dimen/_15mdp"
             android:textColor="@color/black"/>

         <ImageView
             android:layout_width="@dimen/_20mdp"
             android:layout_height="@dimen/_20mdp"
             android:src="@drawable/circle"
             android:layout_marginStart="@dimen/_50mdp"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Not Answered"
             android:layout_marginStart="@dimen/_10mdp"
             android:textSize="@dimen/_15font_mdp"
             android:textColor="@color/black"/>

      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="0.7dp"
          android:background="@color/gray"
          android:layout_marginTop="@dimen/_20mdp"
          android:layout_marginBottom="@dimen/_20mdp"/>

      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/rv_view"/>




   </LinearLayout>


</LinearLayout>